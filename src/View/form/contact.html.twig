{% extends "layout.html.twig" %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/contact.css"/>
{% endblock %}

{% block content %}
	<h1 class="fw-bold text-center mt-2">Réservation</h1>

	<section class="container tardis">

<div class="contenu">
		<form class="form" action="" method="post" enctype="multipart/form-data">


			<div class="mt-2">
				<label for="lastname" class="form-label">Nom :</label>
				<input type="text" class="form-control form-control-lg" name="lastname" id="lastname" placeholder="" value="{{contact.lastname ?? ''}}" required>
			</div>

			<div class="mt-2">
				<label for="firstname" class="form-label">Prénom :</label>
				<input type="text" class="form-control form-control-lg" name="firstname" id="firstname" placeholder="" value="{{contact.firstname ?? '' }}" required>
			</div>

			<div class="mt-2">
				<label for="manyPeople" class="form-label">Nombre de personne :</label>
				<input type="number" class="form-control form-control-lg" name="manyPeople" id="manyPeople" placeholder="" value="{{contact.firstname ?? '' }}" required>
			</div>

			<div class="mt-2">
				<label class="form-label" for="email">Adresse e-mail :</label>
				<input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="" value="{{contact.email ?? ''}}" required>
			</div>


			<div class="mt-2">
				<button class="btn btn-dark" type="submit">Envoyer</button>
			</div>
		</form>
		</div>
	</section>
{% endblock %}
