{% extends "layout.html.twig" %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/contact.css"/>
{% endblock %}


{% block content %}
	<h1 class="fw-bold text-center mt-1 {# fddf #} d-flex justify-content-start p-3 {# grgreg #}">
		<p class=" justP d-flex flex-column justify-content-center ms-1">
			L'Agence de voyage
			<span class="space">
				Réservation
			</span>
			&mdash; interplanétaire &mdash;
		</p>
	</h1>

	<div class="container mt-2">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-6 ">
				<ul class="text-center mt-2	">
					{% for error in errors %}
						<li class="alert alert-danger">
							{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
	<div class="container b-5">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-6 ">
				{% if message == 'success' %}
					<div class="alert alert-success text-center" role="alert">Votre message est bien envoyé.</div>
				{% endif %}


				<section class="mt-1">


					<form class="form p-4 fs-4" action="/thank" method="post" enctype="multipart/form-data">


						<div class="mt-2">
							<label for="lastname" class="form-label">Nom :</label>
							<input type="text" class="form-control form-control-lg" name="lastname" id="lastname" placeholder="Gregory" value="{{contact.lastname ?? ''}}" required>
						</div>

						<div class="mt-2">
							<label for="firstname" class="form-label">Prénom :</label>
							<input type="text" class="form-control form-control-lg" name="firstname" id="firstname" placeholder="Silvestri" value="{{contact.firstname ?? '' }}" required>
						</div>

						<div class="mt-2">
							<label for="manyPeople" class="form-label">Nombre de personnes :</label>
							<input type="number" class="form-control form-control-lg" name="manyPeople" id="manyPeople" placeholder="1" value="{{contact.personne ?? '' }}" required>
						</div>
						<div class="mt-2">
							<label class="form-label" for="email">Adresse e-mail :</label>
							<input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="gregorinoo@hotmail.fr" value="{{contact.email ?? ''}}" required>
						</div>


						<div class="mt-3">
							<button class="btn btn-dark" type="submit">Embarquez</button>
						</div>
					</form>


				</div>

			</div>
		</div>
		{% include "_footer.html.twig" %}
	</section>
{% endblock %}
